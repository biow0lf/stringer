<div id="action-bar">
  <%= render 'feed_action_bar' %>
</div>

<div class="setup" id="add-feed-container">
  <h1><%= t('feeds.add.title') %></h1>
  <hr />
  <p><%= t('feeds.add.description') %></p>
  <hr />
  <%= form_with(url: feeds_path, id: 'add-feed-setup', local: true) do |form| %>
    <div class="control-group">
      <%= form.text_field(:feed_url, id: 'feed-url', value: @feed_url, autofocus: true, required: true) %>
      <i class="icon-envelope-alt field-icon"></i>
      <%= form.label(:feed_url, t('feeds.add.fields.feed_url'), id: 'feed_url-label', class: 'field-label') %>
    </div>
    <%= form.submit(t('feeds.add.fields.submit'), id: 'submit', class: 'btn btn-primary pull-right') %>
  <% end %>
</div>
