<% content_for :title do %>
  <% unless @unread_stories.empty? %>
    <%= "(#{@unread_stories.count})" %>
  <% end %>
<% end %>

<div id="action-bar">
  <%= render 'action_bar', { stories: @unread_stories } %>
</div>

<% if @unread_stories.empty? %>
  <%= render 'zen' %>
<% else %>
  <%= render 'stories.js', stories: @unread_stories %>

  <div id="stories">
    <ul id="story-list">
    </ul>
  </div>
<% end %>
